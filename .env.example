# Clinic Companion v4 - Environment Variables
# Copie este arquivo para .env e ajuste conforme necess√°rio

# Environment
NODE_ENV=development

# Backend Configuration
BACKEND_PORT=3001
DATABASE_PATH=./database/clinic.db

# JWT Configuration
JWT_SECRET=clinic-companion-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=clinic-companion-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_NAME=Clinic Companion
NEXT_PUBLIC_APP_VERSION=4.0.0

# Features Flags
ENABLE_GAMIFICATION=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_AI_ANALYSIS=false

# Demo Mode
DEMO_MODE=true
DEMO_AUTO_LOGIN=false

